<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OdevKCA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OdevKCA"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="Gray"
    FlyoutIcon="view.svg">
    <ShellContent
        FlyoutIcon="qibla.png"
        Title="Kıble"
        ContentTemplate="{DataTemplate local:qibla}"
        Route="qibla" />

    <ShellContent
        FlyoutIcon="walk.png"
        Title="Adım Sayar"
        ContentTemplate="{DataTemplate local:adimSayar}"
        Route="adimSayar" />

    <ShellContent
        FlyoutIcon="hava.png"
        Title="Hava Durumu"
        ContentTemplate="{DataTemplate local:havaDurumu}"
        Route="havaDurumu" />

    <ShellContent
        FlyoutIcon="dolar.png"
        Title="Döviz Kuru Hesaplama"
        ContentTemplate="{DataTemplate local:doviz}"
        Route="doviz" />

    <ShellContent
        Title="Kamera"
        FlyoutIcon="cam.png"
        ContentTemplate="{DataTemplate local:cam2}"
        Route="cam2" />

    <ShellContent Title="Yapılacaklar"
        FlyoutIcon="todo.png"
        ContentTemplate="{DataTemplate local:toDO}"
        Route="toDO"/>

    <ShellContent Title="Stok Liste"
          FlyoutIcon="stok.png"
          ContentTemplate="{DataTemplate local:stokListe}"
          Route="stokListe"/>

    <ShellContent Title="Alarm"
      FlyoutIcon="alarm.png"
      ContentTemplate="{DataTemplate local:alarmUyg}"
      Route="alarmUyg"/>

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />



    </TabBar>


</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OdevKCA.MainPage"
             BackgroundColor="#ADD8E6" Title="YBS Final Ödevi"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Exit" IconImageSource="exit.png" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Margin="20" Spacing="20">
            <Label Text="Kullanıcı Girişi" FontSize="24" HorizontalOptions="Center" TextColor="#333333" />
            <Entry x:Name="usernameEntry"
                   Placeholder="Kullanıcı Adı"
                   VerticalTextAlignment="Center"
                   BackgroundColor="#F5F5F5"
                   TextColor="#333333" />
            <Entry x:Name="passwordEntry"
                   Placeholder="Şifre"
                   IsPassword="True"
                   VerticalTextAlignment="Center"
                   BackgroundColor="#F5F5F5"
                   TextColor="#333333" />
            <Button x:Name="login" Text="Giriş" Clicked="login_Clicked"  BackgroundColor="#4CAF50"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    HeightRequest="50"
                    CornerRadius="25"
                    FontSize="18"/>
            <Button x:Name="register" Text="Kayıt ol" Clicked="register_Clicked"  BackgroundColor="#2196F3"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    HeightRequest="50"
                    CornerRadius="25"
                    FontSize="18"/>
            <Frame Margin="300" WidthRequest="250">
                <Label Text="Kaan Cemal AYDIN" TextColor="Black" FontSize="15" VerticalTextAlignment="Center" HorizontalOptions="Center" FontFamily="Monospace" />
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
